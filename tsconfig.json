{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "lib": ["es2020"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "strictFunctionTypes": false
  },
  "exclude": ["**/node_modules/**/*"]
}
